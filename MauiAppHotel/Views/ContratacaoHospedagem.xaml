<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.ContratacaoHospedagem"
             Title="Contratação de Hospedagem"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#eaf1fb">

    <Grid RowDefinitions="*, Auto" Padding="20">

        <!-- Conteúdo principal -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="20" VerticalOptions="Center">

                <Label Text="Cálculo de Diárias"
                       FontFamily="OpenSansSemiBold"
                       FontSize="44"
                       TextColor="#1A237E"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       />

                <Frame Padding="20"
                       CornerRadius="25"
                       BackgroundColor="White"
                       HasShadow="True"
                       BorderColor="#90CAF9">

                    <VerticalStackLayout Spacing="15">

                        <Grid RowDefinitions="Auto, Auto"
                              ColumnDefinitions="*, Auto, Auto"
                              ColumnSpacing="10"
                              RowSpacing="10">

                            <Label Grid.Row="0" Grid.Column="0"
                                   Text="Adultos:"
                                   FontFamily="OpenSansRegular"
                                   FontSize="18"
                                   TextColor="#1A237E" />

                            <Label Grid.Row="0" Grid.Column="1"
                                   Text="{Binding Value, Source={x:Reference stp_adultos}}"
                                   TextColor="#0D47A1"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center" />

                            <Stepper Grid.Row="0" Grid.Column="2"
                                     x:Name="stp_adultos"
                                     Minimum="0"
                                     Maximum="10"
                                     Increment="1" />

                            <Label Grid.Row="1" Grid.Column="0"
                                   Text="Crianças:"
                                   FontFamily="OpenSansRegular"
                                   FontSize="18"
                                   TextColor="#1A237E" />

                            <Label Grid.Row="1" Grid.Column="1"
                                   Text="{Binding Value, Source={x:Reference stp_criancas}}"
                                   TextColor="#0D47A1"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center" />

                            <Stepper Grid.Row="1" Grid.Column="2"
                                     x:Name="stp_criancas"
                                     Minimum="0"
                                     Maximum="10"
                                     Increment="1" />
                        </Grid>

                        <!-- Escolha da Suíte -->
                        <Frame Padding="15" Margin="10,20,10,0" CornerRadius="20" BackgroundColor="#E3F2FD">
                            <VerticalStackLayout>
                                <Label Text="Escolha sua Suíte"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="#0D47A1"
                                       HorizontalOptions="Center" />
                                <Picker x:Name="pck_quarto"
                                        Title="Selecione sua Acomodação"
                                        FontFamily="OpenSansRegular"
                                        TextColor="#1A237E"
                                        TitleColor="#5C6BC0">
                                    <Picker.Items>
                                        <x:String>Solteiro</x:String>
                                        <x:String>Casal</x:String>
                                        <x:String>Família</x:String>
                                    </Picker.Items>
                                </Picker>
                            </VerticalStackLayout>
                        </Frame>

                        <!-- Período -->
                        <Frame Padding="15" Margin="10,20,10,0" CornerRadius="20" BackgroundColor="#E3F2FD">
                            <VerticalStackLayout Spacing="10">
                                <Label Text="Período da Estadia"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="#0D47A1"
                                       HorizontalOptions="Center" />

                                <HorizontalStackLayout HorizontalOptions="CenterAndExpand" Spacing="10">
                                    <Label Text="Check-in:" FontFamily="OpenSansRegular" />
                                    <DatePicker x:Name="dtpck_checkin" Format="dd/MM/yyyy" />
                                </HorizontalStackLayout>

                                <HorizontalStackLayout HorizontalOptions="CenterAndExpand" Spacing="10">
                                    <Label Text="Check-out:" FontFamily="OpenSansRegular" />
                                    <DatePicker x:Name="dtpck_checkout" Format="dd/MM/yyyy" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>

                        <!-- Botão Avançar -->
                        <Frame HasShadow="True"
                               Padding="0"
                               CornerRadius="30"
                               BackgroundColor="Transparent">
                            <Button Text="Avançar"
                                    BackgroundColor="#1976D2"
                                    TextColor="White"
                                    CornerRadius="30"
                                    FontFamily="OpenSansSemiBold"
                                    HeightRequest="55"
                                    FontSize="18" />
                        </Frame>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Rodapé -->
        <StackLayout Grid.Row="1"
                     HorizontalOptions="Center"
                     Padding="0,10,0,10">

            <Button Text="Sobre"
                    Clicked="OnSobreClicked"
                    FontFamily="OpenSansRegular"
                    FontSize="14"
                    BackgroundColor="Transparent"
                    TextColor="#1976D2" />
        </StackLayout>

    </Grid>
</ContentPage>
